{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6"],
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
