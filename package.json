{
  "name": "react-compose-components",
  "version": "1.0.0",
  "description": "A utility to flatten component pyramids in React.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "prebuild": "npm run lint",
    "build": "tsc",
    "prepack": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "posttest": "npm run lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knpwrs/react-compose-components.git"
  },
  "keywords": [
    "react",
    "compose",
    "components",
    "pyramid"
  ],
  "author": "Kenneth Powers <ken@kenpowers.net> (https://knpw.rs)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/knpwrs/react-compose-components/issues"
  },
  "homepage": "https://github.com/knpwrs/react-compose-components#readme",
  "peerDependencies": {
    "react": "^16.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.3.11",
    "@types/react-dom": "^16.0.5",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-testing-library": "^5.3.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.1",
    "typescript-eslint-parser": "^21.0.2"
  }
}
